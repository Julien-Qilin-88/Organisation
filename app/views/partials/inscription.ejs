                <div class="form__error" role="alert">
                    <%= error %>
                </div>
                <% } %>
                    <div class="inscription__partie1">
                        <div class="inscription__test">
                            <input type="text" name="prenom" id="prenom" required><Label for="prenom">Pr√©nom</Label>
                        </div>
                        <div class="inscription__test">
                            <input type="text" name="nom" id="nom" required><Label for="nom">Nom</Label>

                        </div>
                        <div class="inscription__test">
                            <input type="email" name="email" id="email" required><label for="email">Email</label>
                        </div>
                    </div>

                    <div class="inscription__partie2">
                        <div class="inscription__test">
                            <input type="password" name="password" id="password" required><label for="password">Mot de
